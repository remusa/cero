enum Permission {
    ADMIN
    USER
    PERMISSIONUPDATE
}

type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    resetToken: String
    resetTokenExpiry: Float
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    permissions: [Permission] @scalarList(strategy: RELATION)
    fasts: [Fast] @scalarList(strategy: RELATION)
}

type Fast {
    id: ID! @id @unique
    user: User!
    startDate: DateTime!
    endDate: DateTime
    isActive: Boolean @default(value: false)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}
