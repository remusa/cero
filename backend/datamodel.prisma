enum Permission {
    ADMIN
    USER
    PERMISSIONUPDATE
}

type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    resetToken: String
    resetTokenExpiry: Float
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    permissions: [Permission] @scalarList(strategy: RELATION)
}

