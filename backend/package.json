{
    "name": "cero-backend",
    "version": "1.0.0",
    "description": "Backend for the Cero App",
    "author": "rms",
    "license": "ISC",
    "keywords": [
        "node",
        "graphql",
        "yoga",
        "prisma"
    ],
    "main": "server.js",
    "scripts": {
        "start": "nodemon -e js,graphql -x node src/index.js",
        "dev": "nodemon -e js,graphql -x node --inspect src/index.js",
        "dev-win": "set NODE_ENV=dev & nodemon -e js,graphql -x node --inspect src/index.js",
        "test": "jest",
        "test-win": "set NODE_ENV=test & jest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "deploy-backend": "prisma deploy & cd .. & git subtree push --prefix backend heroku-backend master",
        "frontend": "cd .. & cd frontend/ & npm run dev-win"
    },
    "devDependencies": {
        "graphql-cli": "^3.0.11",
        "mailgun-js": "^0.22.0"
    },
    "dependencies": {
        "babel-preset-env": "^1.7.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "graphql": "^14.3.1",
        "graphql-import": "^0.7.1",
        "graphql-yoga": "^1.17.4",
        "helmet": "^3.18.0",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.2.1",
        "nodemon": "^1.19.1",
        "npm-run-all": "^4.1.5",
        "prisma": "^1.34.0",
        "prisma-binding": "^2.3.11"
    },
    "babel": {
        "presets": [
            "env"
        ]
    }
}
