{
    "name": "cero-backend",
    "version": "1.0.0",
    "description": "Backend for the Cero App",
    "author": "rms",
    "license": "ISC",
    "keywords": [
        "node",
        "graphql",
        "yoga",
        "prisma"
    ],
    "main": "server.js",
    "scripts": {
        "start": "nodemon -e js,graphql -x node src/index.js",
        "dev": "cross-env NODE_ENV=development nodemon -e js,graphql -x node --inspect src/index.js",
        "test": "cross-env NODE_ENV=test jest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier \"src/**/*.{js,html}\" --write",
        "deploy:backend": "prisma deploy && cd .. && npm run deploy:heroku",
        "deploy:heroku": "cd .. && git subtree push --prefix backend heroku-backend master",
        "prisma:token": "prisma token",
        "prisma:login": "prisma login",
        "prisma:init": "prisma init",
        "prisma:generate": "prisma generate",
        "prisma:deploy-dev": "cross-env NODE_ENV=development prisma deploy",
        "prisma:deploy-prod": "cross-env NODE_ENV=production prisma deploy",
        "frontend": "cd .. & cd frontend/ & npm run dev"
    },
    "dependencies": {
        "@sendgrid/mail": "^6.4.0",
        "argon2": "^0.24.0",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "graphql": "^14.4.2",
        "graphql-import": "^0.7.1",
        "graphql-yoga": "^1.18.0",
        "helmet": "^3.18.0",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.2.1",
        "nodemon": "^1.19.1",
        "npm-run-all": "^4.1.5",
        "prisma-binding": "^2.3.15",
        "stripe": "^7.4.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.5.0",
        "cross-env": "^5.2.0",
        "graphql-cli": "^3.0.11"
    },
    "eslintConfig": {
        "extends": [
            "wesbos"
        ]
    }
}
