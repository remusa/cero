{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "cross-env NODE_ENV=production react-scripts start",
        "build": "react-scripts build",
        "test2": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "cross-env NODE_ENV=development react-scripts start",
        "test": "cross-env NODE_ENV=test npm run test:watch",
        "test:watch": "cross-env NODE_ENV=test jest --silent --watch",
        "test:coverage": "cross-env NODE_ENV=test jest --silent --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "deploy": "npm run build && npm run netlify:deploy",
        "netlify:deploy": "netlify deploy --dir=./build -p -m \"$(git log -1 --pretty=%B)\"",
        "backend": "cd .. && cd backend/ && npm run dev"
    },
    "dependencies": {
        "@apollo/react-hooks": "0.1.0-beta.10",
        "@babel/runtime": "^7.6.2",
        "apollo-boost": "^0.4.4",
        "apollo-client": "^2.6.4",
        "chart.js": "^2.8.0",
        "date-fns": "1.30.1",
        "dotenv": "^8.1.0",
        "formik": "^2.0.1-rc.8",
        "graphql": "^14.4.2",
        "graphql-tag": "^2.10.1",
        "normalize.css": "^8.0.1",
        "nprogress": "^0.2.0",
        "prop-types": "^15.7.2",
        "query-string": "^6.8.3",
        "react": "^16.8.6",
        "react-apollo": "^3.0.0-beta.3",
        "react-chartjs-2": "^2.8.0",
        "react-datepicker": "^2.9.6",
        "react-dom": "^16.8.6",
        "react-onclickoutside": "^6.9.0",
        "react-particles-js": "^2.7.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.0.1",
        "react-spinners": "^0.6.1",
        "react-spring": "^8.0.27",
        "react-stripe-checkout": "^2.6.3",
        "react-toastify": "^5.4.0",
        "styled-components": "^5.0.0-beta.6-ej4",
        "yup": "^0.27.0"
    },
    "devDependencies": {
        "@apollo/react-testing": "^3.1.2",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-typescript": "^7.6.0",
        "@testing-library/react": "^9.2.0",
        "@types/enzyme": "^3.10.3",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.9",
        "@types/nprogress": "^0.2.0",
        "@types/react": "^16.9.4",
        "@types/react-datepicker": "^2.9.2",
        "@types/react-dom": "^16.9.1",
        "@types/react-router-dom": "^5.1.0",
        "@types/styled-components": "^4.1.19",
        "@types/yup": "^0.26.24",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "babel-plugin-module-resolver": "^3.1.1",
        "babel-plugin-styled-components": "^1.7.1",
        "casual": "^1.5.19",
        "cross-env": "^6.0.2",
        "enzyme": "^3.6.0",
        "enzyme-adapter-react-16": "^1.5.0",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^6.5.1",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.3.0",
        "eslint-config-wesbos": "0.0.19",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.15.1",
        "eslint-plugin-react-hooks": "^2.1.1",
        "graphql-tools": "^4.0.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.0.0",
        "jest-transform-graphql": "^2.1.0",
        "jest-transform-stub": "^2.0.0",
        "netlify-cli": "^2.15.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "typescript": "^3.5.3",
        "waait": "^1.0.2"
    },
    "eslintConfig": {
        "extends": [
            "wesbos"
        ],
        "rules": {
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".ts",
                        ".tsx"
                    ]
                }
            ]
        }
    },
    "jest": {
        "verbose": true,
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "testEnvironment": "jsdom",
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/build/",
            "<rootDir>/dist/"
        ],
        "moduleFileExtensions": [
            "json",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "transform": {
            "\\.(gql|graphql)$": "jest-transform-graphql",
            ".*": "babel-jest",
            "^.+\\.js?$": "babel-jest",
            "^.+\\.jsx?$": "babel-jest",
            "^.+\\.ts?$": "babel-jest",
            "^.+\\.tsx?$": "babel-jest"
        },
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
        },
        "coverageThreshold": {
            "global": {
                "statements": 70,
                "branches": 70,
                "functions": 70,
                "lines": 70
            }
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react",
            "@babel/preset-typescript"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-syntax-dynamic-import",
            "@babel/transform-runtime"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
