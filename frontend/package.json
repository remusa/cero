{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "apollo-boost": "^0.3.1",
        "apollo-client": "^2.5.1",
        "chart.js": "^2.8.0",
        "graphql": "^14.3.0",
        "graphql-tag": "^2.10.1",
        "normalize.css": "^8.0.1",
        "prop-types": "^15.7.2",
        "query-string": "^6.5.0",
        "react": "^16.8.6",
        "react-apollo": "^2.5.5",
        "react-chartkick": "^0.3.0",
        "react-dom": "^16.8.6",
        "react-particles-js": "^2.6.0",
        "react-router-dom": "^5.0.0",
        "react-scripts": "3.0.1",
        "styled-components": "^4.2.0"
    },
    "devDependencies": {
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.0",
        "enzyme-to-json": "^3.3.4",
        "eslint-config-wesbos": "0.0.19",
        "graphql-tools": "^4.0.0",
        "node-sass": "^4.12.0"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/src/jest.setup.js",
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "transform": {
            "\\.(gql|graphql)$": "jest-transform-graphql",
            ".*": "babel-jest"
        }
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test2": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "NODE_ENV=dev react-scripts start",
        "dev-win": "set NODE_ENV='dev' & react-scripts start",
        "test": "NODE_ENV=test jest --watch",
        "test-win": "set NODE_ENV=test & jest --watch",
        "deploy": "netlify deploy",
        "heroku-postbuild": "next build"
    },
    "eslintConfig": {
        "extends": [
            "airbnb",
            "prettier",
            "prettier/react",
            "wesbos"
        ]
    },
    "//": "wesbos | This is our babel config, I prefer this over a .babelrc file",
    "babel": {
        "env": {
            "development": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "production": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "test": {
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ],
                    "transform-runtime",
                    "transform-class-properties",
                    "react-hot-loader/babel"
                ]
            }
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
